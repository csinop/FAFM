<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutFragment"
    android:background="@color/background">

    <Button
        android:id="@+id/save_and_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="90dp"
        android:contentDescription="@string/save"
        android:drawableEnd="@drawable/ic_baseline_save_24"
        android:padding="2dp"
        android:text="@string/save"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/workoutCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools2:cardElevation="2dp"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_corners_white_violet_stroke">

            <TextView
                android:id="@+id/workoutCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_view_title"
                android:textColor="?colorPrimary"
                android:textSize="18sp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/workoutCardSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workoutCardTitle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/set"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                android:padding="3dp"
                android:background="@drawable/curved_corners_white_violet_stroke"/>

            <EditText
                android:id="@+id/workoutCardSetInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workoutCardTitle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/workoutCardSet"
                android:background="@drawable/curved_corners_white_violet_stroke"
                android:hint="@string/set_count"
                android:padding="3dp"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/workoutRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rep"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="3dp"
                android:background="@drawable/curved_corners_white_violet_stroke"
                android:layout_below="@+id/workoutCardSet"/>

            <EditText
                android:id="@+id/workoutCardRepInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workoutCardSet"
                android:layout_toEndOf="@id/workoutRep"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint="@string/rep_count"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                android:padding="3dp"
                android:background="@drawable/curved_corners_white_violet_stroke"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/workoutCardSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_corners_white_violet_stroke"
                android:textColor="@color/custom_green"
                android:text="@string/add"
                android:textSize="16sp"
                android:layout_below="@+id/workoutRep"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/workoutCardCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_corners_white_violet_stroke"
                android:textColor="@color/custom_green"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:layout_below="@+id/workoutRep"
                android:layout_toEndOf="@id/workoutCardSave"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Chest-->
            <CheckBox
                android:id="@+id/chestCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/chest"
                android:textColor="?colorPrimary"
                android:textSize="34sp"
                tools2:layout_constraintBottom_toTopOf="@+id/chest_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/chest_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:visibility="gone"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/chestCheckBox">

                <CheckBox
                    android:id="@+id/chest_press_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:tag="chestPressNormal"
                    android:text="@string/DUMBBEL_CHEST_PRESS_NORMAL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_bench_press_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_press_normal"
                    android:padding="2dp"
                    android:tag="chestBenchPressNormal"
                    android:text="@string/BENCH_PRESS_NORMAL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_bench_press_incline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_bench_press_normal"
                    android:padding="2dp"
                    android:tag="chestBenchPressIncline"
                    android:text="@string/BENCH_PRESS_INCLINE"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_dumbbel_press_incline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_bench_press_incline"
                    android:padding="2dp"
                    android:tag="chestDumbbelChestPressIncline"
                    android:text="@string/DUMBBEL_CHEST_PRESS_INCLINE"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_dumbbel_fly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_dumbbel_press_incline"
                    android:padding="2dp"
                    android:tag="chestDumbbelFlyNormal"
                    android:text="@string/DUMBBEL_FLY_NORMAL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_dumbbel_fly_incline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_dumbbel_fly"
                    android:padding="2dp"
                    android:tag="chestDumbbelFlyIncline"
                    android:text="@string/DUMBBEL_FLY_INCLINE"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_cable_cross_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_dumbbel_fly_incline"
                    android:padding="2dp"
                    android:tag="chestCableCrossOver"
                    android:text="@string/CABLE_CROSS_OVER"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/chest_dips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chest_cable_cross_over"
                    android:layout_marginBottom="8dp"
                    android:padding="2dp"
                    android:tag="chestDips"
                    android:text="@string/DIP"
                    android:textColor="?colorPrimary" />

            </RelativeLayout>

            <Button
                android:id="@+id/chestGarbage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableLeft="@drawable/ic_baseline_delete_icon_white_24"
                android:enabled="false"
                android:padding="2dp"
                android:tag="chestGarbage"
                android:text="@string/delete_plan"
                android:visibility="invisible"
                tools2:layout_constraintBottom_toTopOf="@+id/biceps_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/chest_layout"
                tools2:layout_constraintVertical_bias="0.0"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <Button
                android:id="@+id/chest_selection_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:drawableEnd="@drawable/ic_baseline_cancel_24"
                android:onClick="onClickResetSelection"
                android:padding="2dp"
                android:tag="chestReset"
                android:text="@string/reset_selection"
                android:visibility="gone"
                tools2:layout_constraintBottom_toTopOf="@+id/biceps_layout"
                tools2:layout_constraintEnd_toEndOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/chest_layout"
                tools2:layout_constraintVertical_bias="0.09" />

            <!--Biceps-->

            <CheckBox
                android:id="@+id/bicepsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="2dp"
                android:text="@string/biceps"
                android:textColor="?colorPrimary"
                android:textSize="34sp"
                tools2:layout_constraintBottom_toTopOf="@+id/biceps_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/chestGarbage" />

            <RelativeLayout
                android:id="@+id/biceps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/bicepsCheckBox">

                <CheckBox
                    android:id="@+id/biceps_barbel_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:tag="bicepsBarbellCurl"
                    android:text="@string/BARBELL_CURL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/biceps_dumbbel_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/biceps_barbel_curls"
                    android:padding="2dp"
                    android:tag="bicepsDumbbelCurl"
                    android:text="@string/DUMBBEL_CURL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/biceps_cable_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/biceps_dumbbel_curls"
                    android:padding="2dp"
                    android:tag="bicepsCableCurl"
                    android:text="@string/CABLE_CURL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/biceps_concentration_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/biceps_cable_curls"
                    android:padding="2dp"
                    android:tag="bicepsConcentrationCurl"
                    android:text="@string/CONCENTRATION_CURL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/biceps_preacher_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/biceps_concentration_curls"
                    android:padding="2dp"
                    android:tag="bicepsPreacherCurls"
                    android:text="@string/PREACHER_CURL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/biceps_hammer_curls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/biceps_preacher_curls"
                    android:layout_marginBottom="8dp"
                    android:padding="2dp"
                    android:tag="bicepsHammerCurls"
                    android:text="@string/HAMMER_CURLS"
                    android:textColor="?colorPrimary" />
            </RelativeLayout>

            <Button
                android:id="@+id/bicepsGarbage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableLeft="@drawable/ic_baseline_delete_icon_white_24"
                android:enabled="false"
                android:padding="2dp"
                android:tag="bicepsGarbage"
                android:text="@string/delete_plan"
                android:visibility="invisible"
                tools2:layout_constraintBottom_toTopOf="@+id/triceps_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/biceps_layout"
                tools2:layout_constraintVertical_bias="0.0"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <Button
                android:id="@+id/biceps_selection_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:drawableEnd="@drawable/ic_baseline_cancel_24"
                android:onClick="onClickResetSelection"
                android:padding="2dp"
                android:tag="bicepsReset"
                android:text="@string/reset_selection"
                android:visibility="gone"
                tools2:layout_constraintBottom_toTopOf="@+id/triceps_layout"
                tools2:layout_constraintEnd_toEndOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/biceps_layout"
                tools2:layout_constraintVertical_bias="0.09" />

            <!--Triceps-->

            <CheckBox
                android:id="@+id/tricepsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="2dp"
                android:text="@string/triceps"
                android:textColor="?colorPrimary"
                android:textSize="34sp"
                tools2:layout_constraintBottom_toTopOf="@+id/triceps_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/bicepsGarbage" />

            <RelativeLayout
                android:id="@+id/triceps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/tricepsCheckBox">

                <CheckBox
                    android:id="@+id/cable_triceps_push_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:tag="tricepsCableTricepsPushDown"
                    android:text="@string/CABLE_TRICEPS_PUSH_DOWN_ANY"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/triceps_extension_any"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cable_triceps_push_down"
                    android:padding="2dp"
                    android:tag="tricepsExtensionAny"
                    android:text="@string/TRICEPS_EXTENSION_ANY"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/triceps_dips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/triceps_extension_any"
                    android:padding="2dp"
                    android:tag="tricepsDips"
                    android:text="@string/TRICEPS_DIPS"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/triceps_skull_crusher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/triceps_dips"
                    android:padding="2dp"
                    android:tag="tricepsSkullCrusher"
                    android:text="@string/SKULL_CRUSHER"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/triceps_bench_dips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/triceps_skull_crusher"
                    android:layout_marginBottom="8dp"
                    android:padding="2dp"
                    android:tag="tricepsBenchDips"
                    android:text="@string/BENCH_DIPS"
                    android:textColor="?colorPrimary" />
            </RelativeLayout>

            <Button
                android:id="@+id/tricepsGarbage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableLeft="@drawable/ic_baseline_delete_icon_white_24"
                android:enabled="false"
                android:padding="2dp"
                android:tag="tricepsGarbage"
                android:text="@string/delete_plan"
                android:visibility="invisible"
                tools2:layout_constraintBottom_toTopOf="@+id/back_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/triceps_layout"
                tools2:layout_constraintVertical_bias="0.0"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <Button
                android:id="@+id/triceps_selection_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:drawableEnd="@drawable/ic_baseline_cancel_24"
                android:onClick="onClickResetSelection"
                android:padding="2dp"
                android:tag="tricepsReset"
                android:text="@string/reset_selection"
                android:visibility="gone"
                tools2:layout_constraintBottom_toTopOf="@+id/back_layout"
                tools2:layout_constraintEnd_toEndOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/triceps_layout"
                tools2:layout_constraintVertical_bias="0.09" />

            <!--Back-->
            <CheckBox
                android:id="@+id/backCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="2dp"
                android:text="@string/back"
                android:textColor="?colorPrimary"
                android:textSize="34sp"
                tools2:layout_constraintBottom_toTopOf="@+id/back_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/tricepsGarbage" />

            <RelativeLayout
                android:id="@+id/back_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/backCheckBox">

                <CheckBox
                    android:id="@+id/back_deadlift_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:tag="backDeadliftNormal"
                    android:text="@string/DEADLIFT_NORMAL"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_deadlift_sumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_deadlift_normal"
                    android:padding="2dp"
                    android:tag="backDeadliftSumo"
                    android:text="@string/DEADLIFT_SUMO"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_chin_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_deadlift_sumo"
                    android:padding="2dp"
                    android:tag="backChinUp"
                    android:text="@string/CHIN_UP"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_pull_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_chin_up"
                    android:padding="2dp"
                    android:tag="backPullUp"
                    android:text="@string/PULL_UP"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_lat_pull_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_pull_up"
                    android:padding="2dp"
                    android:tag="backLatPullDown"
                    android:text="@string/LAT_PULL_DOWN"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_seated_cable_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_lat_pull_down"
                    android:padding="2dp"
                    android:tag="backSeatedCableRow"
                    android:text="@string/SEATED_CABLE_ROW"
                    android:textColor="?colorPrimary" />

                <CheckBox
                    android:id="@+id/back_incline_dumbbel_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_seated_cable_row"
                    android:layout_marginBottom="8dp"
                    android:padding="2dp"
                    android:tag="backInclineDumbbelRow"
                    android:text="@string/INCLINE_DUMBBEL_ROW"
                    android:textColor="?colorPrimary" />
            </RelativeLayout>

            <Button
                android:id="@+id/backGarbage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableLeft="@drawable/ic_baseline_delete_icon_white_24"
                android:enabled="false"
                android:padding="2dp"
                android:tag="backGarbage"
                android:text="@string/delete_plan"
                android:visibility="invisible"
                tools2:layout_constraintBottom_toTopOf="@+id/legs_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/back_layout"
                tools2:layout_constraintVertical_bias="0.0"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <Button
                android:id="@+id/back_selection_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:drawableEnd="@drawable/ic_baseline_cancel_24"
                android:onClick="onClickResetSelection"
                android:padding="2dp"
                android:tag="backReset"
                android:text="@string/reset_selection"
                android:visibility="gone"
                tools2:layout_constraintBottom_toTopOf="@+id/legs_layout"
                tools2:layout_constraintEnd_toEndOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/back_layout"
                tools2:layout_constraintVertical_bias="0.09" />

            <!--Legs-->
            <CheckBox
                android:id="@+id/legsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="2dp"
                android:text="@string/legs"
                android:textColor="?colorPrimary"
                android:textSize="34sp"
                tools2:layout_constraintBottom_toTopOf="@+id/legs_layout"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/backGarbage" />

            <RelativeLayout
                android:id="@+id/legs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools2:layout_constraintStart_toStartOf="parent"
                tools2:layout_constraintTop_toBottomOf="@+id/legsCheckBox">

                <CheckBox
                    android:id="@+id/legs_squat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:tag="legsSquat"
